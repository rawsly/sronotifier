{
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "arrow-spacing": [
      "warn",
      {
        "before": true,
        "after": true
      }
    ],
    "indent": [
      "error",
      "tab"
    ],
    "keyword-spacing": "error",
    "max-nested-callbacks": [
      "error",
      {
        "max": 4
      }
    ],
    "max-statements-per-line": [
      "error",
      {
        "max": 4
      }
    ],
    "no-console": "off",
    "no-var": "error",
    "max-len": ["error", {"code": 180, "ignoreUrls": true}]
  }
}